<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.shadowgame.PuzzleResult">

    <TextView
        android:id="@+id/resultLabel"
        android:text="Default text"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resultScore"
        android:text="0%"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resultLabel"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/resultUser"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/resultContinue"
        android:layout_marginBottom="80dp"
        android:layout_alignParentLeft="true"/>


    <ImageView
        android:id="@+id/resultExpected"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/resultContinue"
        android:layout_marginBottom="80dp"
        android:layout_alignParentRight="true"/>


    <TextView
        android:text="Your image"
        android:layout_above="@+id/resultUser"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="30dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Goal"
        android:layout_above="@+id/resultExpected"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/resultContinue"
        android:text="@string/result_go_button_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
