<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jason.shadowgame.MainMenu">

    <Button
        android:id="@+id/levelsButton"
        android:text="@string/levels_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/stageButton"
        android:text="@string/stage_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/resultButton"
        android:text="@string/result_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
